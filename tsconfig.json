{
    "compilerOptions": {
        "target": "ES6",
        "noUnusedLocals": true,
        "allowJs": true,
        "moduleResolution": "node",
        "allowUnreachableCode": false,
        "noImplicitAny": true,
        "strict": true,
        "charset": "utf8",
        "sourceMap": true,
        "inlineSources": true,
        "module": "ES6",
        "outDir": "./build/",
        "lib": ["es2021", "dom"],
        "baseUrl": ".",
        "paths": {
            "spotfire-api": ["./spotfire/spotfire-api-1-2"],
        },
        "typeRoots": ["./spotfire", "./node_modules/@types"]
    },
    "include": ["./src/**/*.ts", "./test/**/*.ts", "./spotfire/**/*.d.ts"],
    "exclude": ["../node_modules"]
}